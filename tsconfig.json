{
    "compilerOptions": {
        "outDir": "./dist",
        "downlevelIteration": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "module": "CommonJS",
        "target": "ES2017",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "lib": ["es2020", "dom"],
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "esModuleInterop": true
    },
    "include": ["./src/"],
    "exclude": ["types"]
}
